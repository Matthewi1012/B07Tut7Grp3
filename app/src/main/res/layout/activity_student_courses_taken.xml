<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentCoursesTaken">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/courses_taken_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homePageGreen"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toBottomOf="@id/taken_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taken_recycler"
        android:layout_width="match_parent"
        android:layout_height="772dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

        <TextView
        android:id="@+id/add_more_courses"
        android:layout_width="391dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:textColor="@color/homePageGreen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/taken_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/courses_taken_toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>